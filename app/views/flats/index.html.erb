<div class="container">
  <div class="row"><h2>All our Flats(<%= @flats.count %>)</h2></div>

  <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-3">
          <div class="card my-3 shadow-sm">
            <div class="card-header px-4 py-3 ">
              <h4><%= flat.name %></h4>
              <p><%= flat.address %></p>
              <p>
                <i class="fa-solid fa-people-roof"> <%= flat.number_of_guests %>  </i>
                <i class="fa-solid fa-euro-sign"> <%= flat.price_per_night %></i>
              </p>
            </div>
            <div class="card-body">
              <%= link_to "More info", "",class: "btn btn-outline-primary btn-sm" %>
            </div>
          </div>
        </div>
      <% end %>
  </div>

</div>
