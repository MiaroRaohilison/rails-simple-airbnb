<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="card my-4 py-4 px-3">
        <h2>Add a new flat</h2>
        <%= simple_form_for(@flat) do |f| %>
          <%= f.input :name %>
            <%= f.input :address %>
            <%= f.input :description %>
            <%= f.input :number_of_guests %>
            <%= f.input :price_per_night %>
            <%= f.submit "Create Flat", class: "btn btn-success" %>
            <%= link_to "Cancel", :back, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>

</div>
